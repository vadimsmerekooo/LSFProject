@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{ 
    ViewData["Title"] = "Список ролей";
}

<div class="container-fluid container-fluid-site">
    <h2>Список ролей</h2>
    <table class="table text-dark">
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>

                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Удалить
                            </button>
                        </form>
                    </td>
                }
                else
                {
                    <td>
                        <h3 class="text-danger">Для удаления роли, требуется права доступа: Admin</h3>
                    </td>
                }
            </tr>
        }
    </table>
    <a class="btn btn btn-primary" asp-action="Create">Добавить роль</a>
    <a class="btn btn btn-primary" asp-action="UserList">Список пользователей</a>
</div>