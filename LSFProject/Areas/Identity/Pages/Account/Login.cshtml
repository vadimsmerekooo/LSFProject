@page
@model LoginModel

@{
    ViewData["Title"] = "Вход в учетную запись";
}


<div class="login-page">
    <div class="form">
        <form class="login-form" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4 class="text-center">Авторизация</h4>
            <br />
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="text" asp-for="Input.Email" placeholder="логин" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>


            <input type="password" asp-for="Input.Password" placeholder="пароль" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>

            <div class="checkbox text-left float-left" style="padding-bottom: 30px;">
                <input asp-for="Input.RememberMe" class="form-check-input" type="checkbox" style="margin-left: -170px; margin-top: 3px;"/>
                <label class="form-check-label">
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <div style="float: right;">
                <a asp-area="Identity" asp-page="/Account/ForgotPassword">Забыли пароль?</a>
            </div>

            <button>Войти</button>
            <p class="message">Нет аккаунта? <a asp-area="Identity" asp-page="/Account/Register">Создать аккаунт</a></p>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}