@page
@model RoleModel
@{
    ViewData["Title"] = "Список ролей";
}

<div class="container-fluid container-fluid-site">
    <h2>Список ролей</h2>
    <table class="table text-dark">
        @foreach (var role in Model.roles)
        {
            <tr>
                <td>@role.Name</td>

                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <form asp-page-handler="DeleteRole" asp-route-id="@role.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Удалить
                            </button>
                        </form>
                    </td>
                }
                else
                {
                    <td>
                        <h3 class="text-danger">Для удаления роли, требуется права доступа: Admin</h3>
                    </td>
                }
            </tr>
        }
    </table>
    <a class="btn btn btn-primary" asp-page="./CreateRole">Добавить роль</a>
</div>
