@page
@using LSFProject
@model LSFProject.Areas.Identity.Pages.Account.Manage.AspNetTargetsModel
@{
    ViewData["Title"] = "Targets";
}
<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" model="Model.StatusMessage" />

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Название</th>
            <th scope="col">Описание</th>
            <th scope="col">Изображение</th>
            <th scope="col">StatesIDs</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (AspNetTarget aspNetTarget in Model.targets)
        {
            <tr class="text-center">
                <th scope="row">@aspNetTarget.Id</th>
                <th scope="row">@aspNetTarget.Name</th>
                <th scope="row">@aspNetTarget.Description</th>
                <th scope="row"><img src="@(Config.DomainName + Model.files.FirstOrDefault(p => p.Id == aspNetTarget.ImagePath).Path)"/></th>
                <th scope="row">@aspNetTarget.StatesIds</th>
                <th scope="row"><a asp-page="EditTarget" asp-route-id="@aspNetTarget.Id">Изменить</a></th>
                <th scope="col"><a asp-page-handler="Delete" asp-route-id="@aspNetTarget.Id" class="text-danger">Удалить</a></th>
            </tr>
        }
    </tbody>
</table>
