@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация нового аккаунта";
}
<div class="login-page">
    <div class="form">
        <form class="register-form" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="text" asp-for="Input.Name" placeholder="имя" />
            <span asp-validation-for="Input.Name" class="text-danger"></span>


            <input type="text" asp-for="Input.Login" placeholder="логин" />
            <span asp-validation-for="Input.Login" class="text-danger"></span>


            <input type="password" asp-for="Input.Password" placeholder="пароль" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>

            <button>Создать аккаунт</button>
            <p class="message">Уже зарегистрированы? <a asp-area="Identity" asp-page="/Account/Login">Войти</a></p>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}